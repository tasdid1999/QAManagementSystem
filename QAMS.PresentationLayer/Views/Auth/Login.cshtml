@model QAMS.ServiceLayer.ClientEntity.auth.LoginViewModel

<html>
    <head>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/JobPortal.styles.css" asp-append-version="true" />
         <link href="~/lib/font-awesome/css/all.css" rel = "stylesheet" asp-append-version="true" />
    </head>
    <body >
    @{

        if (ViewBag.WrongCredential)
        {
            <div class="alert alert-danger w-50 m-auto text-center " role="alert">
                Wrong Credential
            </div>
        }


    }
        <div class = "container w-25">
            <div class = "container border w-100 mt-5 shadow-sm p-3 mb-2 bg-white rounded">
           <div class = "container mw-100 action-clr"  style = "height:70px">
               <h1 class = "text-light bg-primary text-center py-2">Login</h1>
           </div>
           <form method = "post">
               <div class = "form-group p-1">
                   
                   <i class="fa-solid fa-user"></i>
                   <label >Email</label>
                   
                   <input  asp-for = "Email" class = "form-control mt-1"  />
                   <span asp-validation-for="Email" class="text-danger"></span>
               </div>
               <div class = "form-group p-1">
                   <i class="fa-solid fa-unlock"></i>
                    <label>Password</label>
                     <input asp-for = "Password" class = "form-control mt-1" type = "password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
               </div>
               <div  class = "form-group p-1" >
                   <a href= "#">Forgot password</a>
               </div>
              <div class = "text-center">
                  <input type = "submit" class = "btn btn-dark mt-1 w-50 " value = "Login" />
              </div>

           </form>
        </div>
         <div class = "text-center mt-0">
             <span>are you new in here ?</span>
             <a asp-controller = "Auth" asp-action="Register">Register</a>
         </div>
        </div>
    </body>
</html>